# use C-z as Screen control key
escape ^Zz

# set the window title
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus string "%H (%n: %t)"

# status line at the bottom
caption string "%{= kR}%H %{= kY}%M %d %{= kG}%c %{= kB}%?%-Lw%?%{= kW}%n*%f %t%?(%u)%?%{= kB}%?%+Lw%?"
caption always

# first screen tab
screen emacs
title "emacs"

# second screen tab
screen bash
title "shell"

# third screen tab
screen bash
title "sdf"

